.shade {
  background-color: #ccc;
  opacity: .6;
  position: absolute;
  display: none;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.show {
  display: block!important;
}
.handle-bar {
  padding: 0 15px;
  height: 80rpx;
  background-color: #eee;
}
.iconfirm {
  text-align: right
}
.selector-area {
  height: 600rpx;
  width: 100%;
  background-color: #e6ebf3;
  position: absolute;
  display: none;
  bottom: 0;
}
.selector {
  text-align: center
}
.picker {
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.actived {
  color: blue
}
.area-selector {
  height: 520rpx;
  display: flex;
}
.btn-cancel-flex {
    width: 56px;
    height: 26px;
    right: 5px;
    border-radius: 4px;
    position: absolute;
    line-height: 26px;
    text-align: center;
    border:1px solid #e6324a;
}
.btn-confirm-flex {
    width: 56px;
    height: 26px;
    left: 5px;
    border-radius: 4px;
